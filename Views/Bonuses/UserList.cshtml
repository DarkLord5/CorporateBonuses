@model List<CorporateBonuses.ViewModels.BonusViewModel>

@{
    ViewData["Title"] = "UserList";
}

<h1>UserList</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Описание
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bonus.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bonus.Description)
            </td>
            <td>
                <form method="post" asp-action="UserList" asp-route-id="@item.Bonus.Id">
                    <input type="submit" value="Отправить запрос" />
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
